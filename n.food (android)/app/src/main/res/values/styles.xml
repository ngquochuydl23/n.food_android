<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/whitesmoke</item>
        <item name="android:fontFamily">@font/default_font</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="itemTextColor">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/green</item>

    </style>

    <style name="settingsText">
        <item name="drawableTint">@color/black</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="CustomTabLayout">
        <item name="tabMode">fixed</item>
        <item name="android:background">@color/white</item>
        <item name="tabSelectedTextColor">@color/titleTextColor</item>
        <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
        <item name="tabTextColor">@color/gray</item>
    </style>
    <style name="CustomSearchView">
        <item name="searchHintIcon">@null</item>
        <item name="closeIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/layout_input</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layout_rating_bar_full</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/layout_border_item</item>
    </style>
</resources>
