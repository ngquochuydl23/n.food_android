<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginLeft="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="0.5dp"
        android:elevation="8dp"
        android:background="@drawable/layout_border_item"
        android:id="@+id/thumbnailClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintDimensionRatio="H,170:235"
        app:cardBackgroundColor="@color/white"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        card_view:cardElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:layout_width="170dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,1:1" />
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="productName"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingRight="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productImage"
                app:layout_constraintBottom_toTopOf="@id/restaurantName"
                android:layout_marginRight="20dp"
                android:textColor="@color/titleTextColor" />
            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:maxLines="1"
                android:text="restaurantName"
                android:ellipsize="end"
                android:textColor="@color/gray"
                android:textSize="12.5sp"
                app:layout_constraintBottom_toTopOf="@id/productDiscount"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productName" />
            <TextView
                android:id="@+id/productDiscount"
                android:text="149.000Ä‘"
                android:textColor="@color/titleTextColor"
                app:layout_constraintTop_toBottomOf="@id/restaurantName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="5dp"
                android:textSize="14sp"
                android:layout_marginBottom="3dp"
                android:drawablePadding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>